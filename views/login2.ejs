<html>
    <head>
        <title>Login</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    </head>
    <body>
        <div class="formdiv" style="display: table-caption;" >
       <form action="">           
           <label for="email">Email</label>
            <input type="email" name="email" id="email">
            <label for="password">password</label>
           <input type="password" id="password" >
           <h4 id="emailerr" style="display:none">Emai entered is not in our records</h4>
           <h4 id="passworderr" style="display:none">Password entered is incorrect</h4>
           <input type="button" id="signup" value="login" onclick="login()">
           <a href="http://localhost:9999/"><input type="button" name="signup" id="signup" value="signup"></a>
       </form> 
        </div>
       <script>
        function login(){            
            var email=$('#email').val();
            var password=$('#password').val();

            if(email==""||password==''){
                
                if(email==''){
                    $('#email').css('border','2px solid red');
                }else{
                    $('#email').css('border','');
                }
                if(password==''){
                    $('#password').css('border','2px solid red');
                }else{
                    $('#password').css('border','');
                }
                           
            }else{
                
                var details={email,password};                

                $.ajax({
                    type:'post',
                    url:'http://localhost:9999/home',
                    data:details,                    
                    success:function(data){
                        if(data.msg=='success'){
                            window.location.href="http://localhost:9999/homepage";
                        }else if(data.msg=='email'){
                            $('#emailerr').show();    
                        }else{
                            $('#passworderr').show();
                        }
                    }
                })
            }

        }
       </script>
    </body>
</html>